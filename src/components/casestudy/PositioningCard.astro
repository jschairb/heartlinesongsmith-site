---
const { title } = Astro.props;

interface PositionItem {
	title: string;
	description: string;
}

const { items } = Astro.props as { items: PositionItem[] };
---

<div class="bg-white dark:bg-stone-900 p-6 rounded-lg shadow-lg border border-amber-100 dark:border-amber-900">
	<h3 class="text-xl font-bold text-amber-900 dark:text-amber-200 mb-3 border-b-2 border-amber-200 dark:border-amber-800 pb-2 font-serif">
		{title}
	</h3>
	<ul class="space-y-3 text-gray-700 dark:text-gray-300">
		{items.map((item) => (
			<li class="flex items-start">
				<span class="font-bold text-amber-800 dark:text-amber-400 mr-2 mt-1">&#10142;</span>
				<span>
					<strong>{item.title}:</strong> {item.description}
				</span>
			</li>
		))}
	</ul>
</div>
