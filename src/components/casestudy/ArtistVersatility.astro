---
const { title, description, projectsLabel, projects, closingText } = Astro.props;
---

<div class="bg-white dark:bg-stone-900 p-6 rounded-lg shadow-lg border border-amber-100 dark:border-amber-900">
	<h3 class="text-xl font-bold text-amber-900 dark:text-amber-200 mb-3 border-b-2 border-amber-200 dark:border-amber-800 pb-2 font-serif">
		{title}
	</h3>
	<p class="text-gray-700 dark:text-gray-300 mb-4">
		{description}
	</p>
	<p class="text-sm text-gray-600 dark:text-gray-400">
		<strong>{projectsLabel}</strong>
	</p>
	<div class="flex flex-wrap gap-2 mt-2">
		{projects.map((project: string) => (
			<span class="bg-gray-200 dark:bg-stone-700 text-gray-700 dark:text-gray-300 text-xs font-medium px-2.5 py-1 rounded-full">
				{project}
			</span>
		))}
	</div>
	<p class="mt-4 text-gray-700 dark:text-gray-300">
		{closingText}
	</p>
</div>
