---
// @ts-ignore
import { Icon } from "astro-icon/components";

const features = [
	{
		title: "Lightning Fast Delivery",
		description: "Our AI-assisted workflow means you can go from idea to finished song and video in less than a day. Perfect for the anniversary or birthday you *almost* forgot.",
		icon: "bx:bxs-bolt",
	},
	{
		title: "Radically Personal",
		description: "This isn't a generic template. Our system helps you tell your unique story, and our artists craft it into a professional track that could only be for them.",
		icon: "bx:bxs-heart",
	},
	{
		title: "A Forever Keepsake",
		description: "You don't just get an MP3. You get a \"Heartline Hits on GWPTV\" Premier Vid—a personalized music video you can share and relive forever.",
		icon: "bx:bxs-video",
	},
];

const process = [
	{
		step: 1,
		title: "Tell Your Story",
		description: "Fill out our smart Intake Form. It's a fun, guided process that takes minutes and captures the key details, mood, and genre for your song.",
	},
	{
		step: 2,
		title: "Approve the Vision",
		description: "Moments later, you'll receive a \"Track Vision\" PDF. It includes a creative summary and a draft of the lyrics so you can be sure we've nailed the direction.",
	},
	{
		step: 3,
		title: "Get Your Hit Song & Vid",
		description: "Once approved, our artists record the song and our automated system generates your custom 'Premier Vid,' ready to share in hours.",
	},
];
---

<!-- Features Section -->
<div class="py-20">
	<div class="mx-auto max-w-7xl px-6">
		<div class="grid md:grid-cols-3 gap-8">
			{
				features.map((feature) => (
					<div class="bg-gray-100 dark:bg-gray-800 p-8 rounded-lg border border-gray-200 dark:border-gray-700">
						<div class="h-8 w-8 mb-4 text-red-600 dark:text-red-500">
							<Icon name={feature.icon} />
						</div>
						<h3 class="text-2xl font-bold mb-4 text-black dark:text-white">{feature.title}</h3>
						<p class="text-gray-600 dark:text-gray-400">{feature.description}</p>
					</div>
				))
			}
		</div>
	</div>
</div>

<!-- How It Works Section -->
<div class="py-20 bg-gray-50 dark:bg-gray-900">
	<div class="mx-auto max-w-7xl px-6 text-center">
		<h2 class="text-4xl font-bold tracking-tight text-black dark:text-white mb-4">A Modern Process for a Personal Gift</h2>
		<p class="text-xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto mb-16">
			We've combined a simple, fun creative brief with powerful AI and real artistic talent to make something magical, fast.
		</p>
		<div class="relative grid md:grid-cols-3 gap-8">
			<!-- The connecting line -->
			<div class="hidden md:block absolute top-12 left-0 w-full h-0.5 bg-gray-300 dark:bg-gray-700" style="transform: translateY(-50%);"></div>
			
			{
				process.map((item) => (
					<div class="relative z-10 bg-gray-100 dark:bg-gray-800 p-8 rounded-lg border border-gray-200 dark:border-gray-700 text-center">
						<div class="absolute -top-8 left-1/2 -translate-x-1/2 w-16 h-16 bg-red-600 text-white font-bold text-2xl rounded-full flex items-center justify-center border-4 border-white dark:border-gray-900">
							{item.step}
						</div>
						<h3 class="text-2xl font-bold mt-8 mb-4 text-black dark:text-white">{item.title}</h3>
						<p class="text-gray-600 dark:text-gray-400">{item.description}</p>
					</div>
				))
			}
		</div>
	</div>
</div>

<!-- What You Get Section -->
<div class="py-20">
	<div class="mx-auto max-w-7xl px-6 grid md:grid-cols-2 gap-12 items-center">
		<div>
			<!-- Premier Vid Example -->
			<div class="bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg p-4 shadow-2xl">
				<div class="aspect-video bg-black rounded overflow-hidden">
					<iframe
						width="100%"
						height="100%"
						src="https://www.youtube.com/embed/1dNDBcwGiB8"
						title="Heartline Songsmith Premier Vid Example"
						frameborder="0"
						allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
						allowfullscreen
						class="w-full h-full"
					></iframe>
				</div>
			</div>
		</div>
		<div>
			<h2 class="text-4xl font-bold tracking-tight text-black dark:text-white mb-4">More Than a Song. It's a Moment.</h2>
			<p class="text-xl text-gray-600 dark:text-gray-400 mb-8">
				Every Heartline Songsmith order is a complete, shareable experience, delivered digitally for instant gifting.
			</p>
			<ul class="space-y-4">
				<li class="flex items-start">
					<span class="text-red-500 mr-3 mt-1 text-xl">✔</span>
					<div>
						<h4 class="font-bold text-black dark:text-white text-xl">Broadcast-Quality Custom Song</h4>
						<p class="text-gray-600 dark:text-gray-400">A professionally written, recorded, and mastered track based on your story. Delivered as a high-quality MP3 & WAV file.</p>
					</div>
				</li>
				<li class="flex items-start">
					<span class="text-red-500 mr-3 mt-1 text-xl">✔</span>
					<div>
						<h4 class="font-bold text-black dark:text-white text-xl">The 'Premier Vid' Experience</h4>
						<p class="text-gray-600 dark:text-gray-400">A personalized music video featuring an intro from a GWPTV VJ host, a summary of your song's creative vision, and a full, dynamic lyric video.</p>
					</div>
				</li>
			</ul>
		</div>
	</div>
</div>
